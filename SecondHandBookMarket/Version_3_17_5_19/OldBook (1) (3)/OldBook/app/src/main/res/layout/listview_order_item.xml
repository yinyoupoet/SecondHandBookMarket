<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/corner_round"
            android:padding="10dp" >

            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:textColor="#777777"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_no"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="XYSY201516080123"
                android:textColor="#777777"
                android:textSize="14sp" />
        </RelativeLayout>

        		<View
            		android:layout_width="match_parent"
            		android:layout_height="1dp"
            		android:background="#dddddd" /><!-- 间隔 -->
			<LinearLayout 
			    android:id="@+id/book_detail"
			    android:layout_width="fill_parent"
			    android:layout_height="100dp"
			    android:background="#FFFFF0"
			    android:orientation="horizontal">
			    <ImageView 
			        android:id="@+id/book_image"
			        android:layout_width="0dp"
			        android:layout_height="fill_parent"
			        android:layout_weight="1"
			        android:layout_margin="2dp"
			        android:src="@drawable/demo"/>
			    <RelativeLayout 
			        android:layout_width="0dp"
			        android:layout_height="fill_parent"
			        android:layout_weight="3"
			        >
			        <TextView 
			            android:layout_width="fill_parent"
			            android:layout_height="40dp"
			            android:text="数字电子技术基础"
			            android:textSize="20sp"
			            android:singleLine="true"
			            android:layout_alignParentTop="true"
			            />
			        <TextView 
			            android:layout_width="fill_parent"
			            android:layout_height="20dp"
			            android:text="原价  ￥48"
			            android:textSize="16sp"
			            android:layout_centerVertical="true"
			            />
			        <TextView 
			            android:layout_width="fill_parent"
			            android:layout_height="25dp"
			            android:text="现价 ￥12"
			            android:textSize="18sp"
			            android:layout_alignParentBottom="true"/>
			    </RelativeLayout>
			</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd" /><!-- 间隔 -->

        <RelativeLayout
            android:id="@+id/order_end"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
             >

            <TextView
                android:id="@+id/tv_shifukuai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="实付款:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_shifukuai"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tv_shifukuai"
                android:padding="3dp"
                android:text="￥20.00"
                android:textColor="#CC0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/order_state_lable"
                android:gravity="center"
                android:padding="3dp"
                android:text="去送货"
                android:layout_marginEnd="10dp"
                android:textColor="#CC0000"
                android:textSize="15sp" />
        </RelativeLayout>

</LinearLayout>
