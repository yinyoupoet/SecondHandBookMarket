<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/Reset_Password_Toolbar"
            android:layout_width="382dp"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:weightSum="1"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageButton
                android:id="@+id/Reset_Password_Toolbar_Back"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/back_image" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="修改密码"
                android:textSize="18sp" />

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "80dp"
                android:orientation = "horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="账号"
                    android:textSize="16sp"/>

                <EditText
                    android:id = "@+id/modify_account_exittext"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:background="@android:drawable/edit_text"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "130dp"
                android:orientation = "horizontal">

             <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="原密码"
                    android:textSize="16sp"/>

                <EditText
                    android:id = "@+id/modify_old_password_exittext"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:background="@android:drawable/edit_text"
                    android:password="true"
                 android:textSize="15sp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "180dp"
                android:orientation = "horizontal">

                <TextView
                    android:id="@+id/SignIn_Password"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="新密码"
                    android:textSize="16sp"/>

                <EditText
                    android:id = "@+id/modify_new_password_exittext"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:background="@android:drawable/edit_text"
                    android:textSize="15sp"
                    android:password="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "230dp"
                android:orientation = "horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="确认密码"
                    android:textSize="16sp"/>

                <EditText
                    android:id = "@+id/modify_affirm_password_exittext"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:background="@android:drawable/edit_text"
                    android:password="true"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/Reset_Password_Button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="300dp"
                android:text="确认修改" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
