<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/SignIn_Toolbar"
            android:layout_width="382dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/SignIn_Toolbar_Back"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/back_image" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="注册"
                android:textSize="18sp" />

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "80dp"
                android:orientation = "horizontal">

                <TextView
                    android:id="@+id/SignIn_Name"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="姓名"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/SignIn_Name_Text"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:background="@android:drawable/edit_text"
                    android:maxLength = "25"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "140dp"
                android:orientation = "horizontal">

                <TextView
                    android:id="@+id/SignIn_ID"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="学号"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/SignIn_ID_Text"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:maxLength = "25"
                    android:background="@android:drawable/edit_text"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "200dp"
                android:orientation = "horizontal">

                <TextView
                    android:id="@+id/SignIn_Academy"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="学院"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/SignIn_Academy_Text"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:maxLength = "25"
                    android:background="@android:drawable/edit_text"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "260dp"
                android:orientation = "horizontal">

                <TextView
                    android:id="@+id/SignIn_Major"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="专业"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/SignIn_Major_Text"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:maxLength = "25"
                    android:background="@android:drawable/edit_text"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "320dp"
                android:orientation = "horizontal">

                <TextView
                    android:id="@+id/SignIn_Password"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="密码"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/SignIn_Password_Text"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:background="@android:drawable/edit_text"
                    android:textSize="15sp"
                    android:maxLength = "16"
                    android:password="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop = "380dp"
                android:orientation = "horizontal">

                <TextView
                    android:id="@+id/SignIn_Affirm_Password"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:layout_marginLeft="17dip"
                    android:gravity = "left"
                    android:text="确认密码"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/SignIn_Affirm_Password_Text"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity ="center"
                    android:maxLength = "16"
                    android:background="@android:drawable/edit_text"
                    android:password="true"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop = "440dp"
                android:orientation = "vertical">

                <Button
                    android:id="@+id/SignIn_Button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity = "center"
                    android:text="注册" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
